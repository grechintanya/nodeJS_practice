{
    "compilerOptions": {
      "target": "es5",                          
      "module": "commonjs",   
      "moduleResolution": "Node",
      "lib": ["ES2021"],                     
      "allowJs": true,
      "outDir": "build",                          
      "rootDir": "src",
      "strict": true,         
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true
    },
    "exclude":[
      "./node_modules"
    ]
}
  